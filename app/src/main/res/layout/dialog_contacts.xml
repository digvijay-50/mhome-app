<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="wrap_content"
    android:background="@drawable/btnbgwhite"
    android:orientation="vertical"
    android:padding="7dp">


    <TextView
        android:id="@+id/tv_topname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunitosans_bold"
        android:text="Contact Us"
        android:textColor="@color/purple_200"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/emailcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/btnbgwhitestock"
            android:orientation="horizontal"
            android:elevation="10dp"
            android:padding="10dp"
            android:weightSum="10">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="5"
                android:fontFamily="@font/nunitosans_regular"
                android:text="-"
                android:id="@+id/emailtv"
                android:textColor="@color/textgrey"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:src="@drawable/contactus"
                app:tint="@color/darkgray" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/phonecv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/btnbgwhitestock"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="10">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="5"
                android:fontFamily="@font/nunitosans_regular"
                android:text="-"
                android:id="@+id/phonetv"
                android:textColor="@color/textgrey"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:src="@drawable/contactphoneic"
                app:tint="@color/darkgray" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:background="@drawable/btnbg"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"
            android:padding="15dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>