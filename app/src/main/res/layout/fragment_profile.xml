                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="20dp"
                        android:layout_marginRight="15dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
