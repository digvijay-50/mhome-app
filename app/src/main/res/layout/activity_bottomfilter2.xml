<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_selector">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="left|center"
            android:text="Sort"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView

            android:id="@+id/t_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"

            android:layout_marginRight="15dp"
            android:fontFamily="@font/nunitosans_bold"
            android:gravity="left|center"
            android:text="Clear"
            android:textColor="@color/purple_200"
            android:textSize="18dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkgray">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_rkm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup_filter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/gendertv"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">


                            <RadioButton
                                android:id="@+id/rb_new"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"

                                android:fontFamily="@font/nunitosans_regular"
                                android:text="Newly Listed"
                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/rb_low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_regular"
                                android:text="Price : Low to High"
                                android:layout_marginLeft="15dp"

                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/rb_high"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_regular"
                                android:text="Price : High to Low"
                                android:layout_marginLeft="15dp"

                                android:textSize="13sp" />


                            <RadioButton
                                android:id="@+id/rb_sqlow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_regular"
                                android:text="Price / sq.ft. : Low to High"
                                android:layout_marginLeft="15dp"

                                android:textSize="13sp" />

                            <RadioButton
                                android:id="@+id/rb_sqhigh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunitosans_regular"
                                android:text="Price / sq.ft. : High to Low"
                                android:layout_marginLeft="15dp"

                                android:textSize="13sp" />




                        </RadioGroup>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_rrate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radioGroup_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/gendertv"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="1dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp">





                        </RadioGroup>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/saveBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btnbg"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/nunitosans_bold"
                        android:gravity="center"
                        android:text="Apply"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />

                    <Button
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/btnbg"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/nunitosans_bold"
                        android:gravity="center"
                        android:text="Apply"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14dp" />
                </LinearLayout>

            </RelativeLayout>




        </LinearLayout>


    </LinearLayout>




</LinearLayout>