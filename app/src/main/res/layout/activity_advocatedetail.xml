<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.AdvocatedetailActivity">

    <include layout="@layout/toolbarlayout"/>
    <include layout="@layout/loaderlayout"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btnbgwhitestock"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im_adimage"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY"
            app:riv_oval="true"
            android:src="@drawable/userimage"
            android:layout_margin="10dp"
            android:layout_gravity="center">

        </com.makeramen.roundedimageview.RoundedImageView>
        <TextView
            android:id="@+id/tv_pakname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="15dp"

            android:layout_marginEnd="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"

            android:fontFamily="@font/nunitosans_bold"
            android:gravity="center"

            android:text="Proceed"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tv_numberpost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/tv_tehsil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosans_semibold"
                    android:layout_marginTop="7dp"
                    android:gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:text=""
                    android:textColor="@color/darkgray"
                    android:textSize="16dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>